<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/m90">

            <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="@dimen/m22"
                    android:layout_height="@dimen/m19"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/m20"
                    android:src="@drawable/icon_back"
                    android:layout_marginTop="@dimen/m20"/>

            <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="验证手机号"
                    android:textColor="@color/contents_text"
                    android:textSize="20sp"
                    android:layout_marginTop="@dimen/m20"
                    android:textStyle="bold"/>
        </FrameLayout>
        <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m56"
                app:leftTopCornerRadius="@dimen/m10"
                app:rightBottomCornerRadius="@dimen/dp_10"
                app:leftBottomCornerRadius="@dimen/m10"
                app:rightTopCornerRadius="@dimen/m10"
                app:leftShadowWidth="0dp"
                app:rightShadowWidth="0dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_marginRight="@dimen/m20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="@dimen/m21"
                        android:layout_height="@dimen/m21"
                       android:src="@drawable/icon_user_off"/>

                <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/contents_text"
                        android:textSize="18sp" />
            </LinearLayout>
        </www.linwg.org.lib.LCardView>
        <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m56"
                app:leftTopCornerRadius="@dimen/m10"
                app:rightBottomCornerRadius="@dimen/dp_10"
                app:leftBottomCornerRadius="@dimen/m10"
                app:rightTopCornerRadius="@dimen/m10"
                app:leftShadowWidth="0dp"
                app:rightShadowWidth="0dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_marginRight="@dimen/m20"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_user_off" />

                <EditText
                        android:id="@+id/edit_yzm"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:hint="@string/edit_hint5"
                        android:inputType="number"
                        android:maxLength="6"
                        android:layout_marginRight="25dp"
                        android:singleLine="true"
                        android:textSize="18dp" />

                <TextView
                        android:id="@+id/tv_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv6"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="24dp"
                        android:textColor="@color/color_F9CE0F"
                        android:textSize="15sp"
                        />
            </LinearLayout>
        </www.linwg.org.lib.LCardView>


    </LinearLayout>
    <LinearLayout
            android:id="@+id/btn_ToLogin"
            android:layout_width="209dp"
            android:layout_height="54dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/m70"
            android:background="@drawable/shape_btn_bg_40"
            android:gravity="center">

        <TextView
                android:id="@+id/tv_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/contents_text"
                android:textSize="20sp" />

    </LinearLayout>
</FrameLayout>
