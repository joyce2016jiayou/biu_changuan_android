<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_quanju"
    android:layout_width="match_parent"
    android:layout_height="@dimen/m50"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/toolbar_left_button1"
        android:layout_width="@dimen/m22"
        android:layout_height="@dimen/m22"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/m20"
        android:src="@drawable/icon_back" />

    <TextView
        android:id="@+id/toolbar_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="标题"
        android:textColor="@color/top_heiziti"
        android:textSize="@dimen/sp20"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/toolbar_right_button_Tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/m20"
        android:text="右边文字"
        android:textColor="@color/top_heiziti"
        android:textSize="@dimen/sp20"
        android:textStyle="normal"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/toolbar_right_button_Image"
        android:layout_width="@dimen/m22"
        android:layout_height="@dimen/m22"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/m20"
        android:src="@drawable/icon_add"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linear_left"
        android:layout_width="@dimen/m100"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/transparent"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_right"
        android:layout_width="@dimen/m100"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:orientation="vertical">

    </LinearLayout>

</RelativeLayout>